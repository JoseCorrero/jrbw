---
import HeaderButton from "./HeaderButton.astro";

interface Props {
    isHome: boolean;
    isConcerts: boolean;
    isBiography: boolean;
}

const { pathname } = Astro.url;
const { isHome, isConcerts, isBiography } = Astro.props;

function isActive(href: string): boolean {
    return pathname === href;
}
---

<header class="mb-10 h-16 max-w-[100vw] lg:h-24">
    <nav class="flex h-full w-full items-center justify-between px-10 lg:justify-center">
        <HeaderButton href="/" name="Home" active={isActive("/")} />
        <HeaderButton href="/concerts" name="Concerts" active={isActive("/concerts")} />
        <HeaderButton href="/biography" name="Biography" active={isActive("/biography")} />
    </nav>
    {isHome && <div class="h-[2px] w-full bg-gradient-to-r from-[var(--home-background-color)] from-1% via-[var(--color-primary)] to-[var(--home-background-color)] to-1%"></div>}
    {isConcerts && <div class="h-[2px] w-full bg-gradient-to-r from-[var(--concerts-background-color)] from-1% via-[var(--color-primary)] to-[var(--concerts-background-color)] to-1%"></div>}
    {isBiography && <div class="h-[2px] w-full bg-gradient-to-r from-[var(--biography-background-color)] from-1% via-[var(--color-primary)] to-[var(--biography-background-color)] to-1%"></div>}
</header>